<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="survey.tgs.com.myapplication.HomeActivity" >

    <TextView
        android:id="@+id/txt_noserveys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="No of Servey&apos;s :" />

    <Button
        android:id="@+id/btn_startservey"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/sing_in_button"
        android:gravity="center"
        android:onClick="startSurvey"
        android:text="Start survey"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/btn_startservey"
        android:layout_alignLeft="@+id/btn_startservey"
        android:layout_alignRight="@+id/btn_startservey"
        android:layout_marginBottom="22dp"
        android:background="@color/sing_in_button"
        android:text="Servey Report"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/btn_startservey"
        android:layout_alignRight="@+id/btn_startservey"
        android:layout_below="@+id/btn_startservey"
        android:layout_marginTop="18dp"
        android:background="@color/sing_in_button"
        android:text="Exoprt to sdcard"
        android:textColor="@color/white" />

</RelativeLayout>